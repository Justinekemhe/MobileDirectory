<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#C4BA26"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:drawablePadding="15dp"
        android:gravity="fill"
        android:text="Add Company"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/companyfullname"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:ems="10"
        android:gravity="start|center"
        android:textSize="24dp"
        android:hint="Company Full Name"
        android:inputType="textCapSentences"
        android:textColor="#000000" />
    <EditText
        android:id="@+id/companyphone"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:textSize="24dp"
        android:ems="10"
        android:gravity="start|center"
        android:hint="Company Phone Number"
        android:inputType="phone"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/companyemail"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:textSize="24dp"
        android:ems="10"
        android:gravity="start|center"
        android:hint="Company Email Address"
        android:inputType="textEmailAddress"
        android:textColor="#000000" />
    <EditText
        android:id="@+id/companywebsite"
        android:layout_width="match_parent"
        android:textSize="24dp"
        android:layout_height="96dp"
        android:ems="10"
        android:gravity="start|center"
        android:hint="Company Website"
        android:inputType="textWebEditText"
        android:layout_marginBottom="170dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="#000000"
        android:textColor="@color/yellow"
        android:drawableRight="@drawable/ic_baseline_send_24"
        />

</LinearLayout>